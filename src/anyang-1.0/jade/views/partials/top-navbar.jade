// START Top Navbar
nav.navbar.topnavbar(role='navigation')
    // START navbar header
    .navbar-header
      a.navbar-brand(href='#/') 
        .brand-logo 
          img.img-responsive(src="app/img/logo.png", alt="App Logo")
        .brand-logo-collapsed 
          img.img-responsive(src="app/img/logo-single.png", alt="App Logo")
    // END navbar header

    // START Nav wrapper
    .nav-wrapper
      // START Left navbar
      ul.nav.navbar-nav
        li
          // Button used to collapse the left sidebar. Only visible on tablet and desktops
          a(href='', trigger-resize="", ng-click="app.layout.isCollapsed = !app.layout.isCollapsed",title="{{ (app.layout.isCollapsed?'topbar.aside.EXPAND-TITLE':'topbar.aside.COLLAPSE-TITLE') | translate }}" ).hidden-xs
            em.fa.fa-navicon
          // Button to show/hide the sidebar on mobile. Visible on mobile only.
          a(href='', ng-click="app.asideToggled = !app.asideToggled",title="{{ (app.layout.isCollapsed?'topbar.aside.EXPAND-TITLE':'topbar.aside.COLLAPSE-TITLE') | translate }}").visible-xs.sidebar-toggle
            em.fa.fa-navicon
        // START User avatar toggle
        li
          // Button used to collapse the left sidebar. Only visible on tablet and desktops
          a(href='', ng-click="toggleUserBlock()",title="{{ 'topbar.user-block.TITLE' | translate }}" )
            em.icon-user
        // END User avatar toggle
        // START lock screen
        li
          a(ng-click="app.lock($event)", title="{{ 'topbar.lock.TITLE' | translate }}")
            em.icon-lock
         // END lock screen
        // START lock screen
        li
          a(ng-click="app.logout($event)" title="{{ 'topbar.logout.TITLE' | translate }}")
            em.icon-logout
        // END lock screen
      // END Left navbar

      // START Right Navbar
      ul.nav.navbar-nav.navbar-right
        // Search icon
        li
          a(search-open="")
            em.icon-magnifier
        // START Offsidebar button
        li
          a(href='', ng-click="app.offsidebarOpen = !app.offsidebarOpen")
            em.icon-notebook
        // END Offsidebar menu
      // END Right Navbar

    // END Nav wrapper
    
    // START Search form
    form.navbar-form(role='search', action="search.html")
      .form-group.has-feedback
        input.form-control(type='text', placeholder="{{ 'topbar.search.PLACEHOLDER' | translate }}")
        .fa.fa-times.form-control-feedback(search-dismiss)
      button.hidden.btn.btn-default(type='submit') Submit
    // END Search form



// END Top Navbar