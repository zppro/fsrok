                                        span.text-danger(ng-if="row.$editing",ng-show="utils.vinput(this.theForm,'row$phone','phone')") {{ "validator.FORMAT" | translate:{item:"手机号码"} }}
                                    td.text-left
                                        span(ng-if="!row.$editing") {{::row.address}}
