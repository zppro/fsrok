                                    td.text-center
                                        span(ng-if="!row.$editing") {{::row.sex|diFilter:vm.selectBinding.sex}}
                                        .dropdown(ng-if="row.$editing",s-dropdown,is-button,ng-model="row.sex",s-dropdown-data="vm.selectBinding.sex")
