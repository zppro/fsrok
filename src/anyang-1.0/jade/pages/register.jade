.block-center.mt-xl.wd-xl(ng-controller="RegisterFormController as reg")
  // START panel
  .panel.panel-dark.panel-flat
    .panel-heading.text-center
      a(href="#")
        img.block-center.img-rounded(src='app/img/logo.png', alt='Image')
    .panel-body
      p.text-center.pv {{ 'page.register.TIP' | translate}}.
      form.form-validate.mb-lg(role='form', name="reg.registerForm", novalidate='', ng-submit="reg.register()")
        .form-group.has-feedback
          label.text-muted {{ 'page.register.TIP-CODE' | translate}}
          input.form-control(type='email', name="account_email" placeholder='{{ "page.register.PLACEHOLDER-CODE" | translate}}', autocomplete="off", ng-model="reg.account.email", required='')
          span.fa.fa-envelope.form-control-feedback.text-muted
          span.text-danger(ng-show="reg.registerForm.account_email.$dirty && reg.registerForm.account_email.$error.required") {{ "validator.REQUIRED" | translate}}
          span.text-danger(ng-show="reg.registerForm.account_email.$dirty && reg.registerForm.account_email.$error.email") {{ "validator.FORMAT" | translate:{item:"邮箱地址"} }}
        .form-group.has-feedback
          label.text-muted {{ 'page.register.TIP-PASSWORD' | translate}}
          input#id-password.form-control(type='password', name="account_password", ng-model="reg.register.password", ng-pattern="/^[a-zA-Z0-9]{6,10}$/", required='')
          span.fa.fa-lock.form-control-feedback.text-muted
          span.text-danger(ng-show="reg.registerForm.account_password.$dirty && reg.registerForm.account_password.$error.required") {{ "validator.REQUIRED" | translate}}
          span.text-danger(ng-show="reg.registerForm.account_password.$dirty && reg.registerForm.account_password.$error.pattern") {{ "validator.PASSWORD-FORMAT" | translate}}
        .form-group.has-feedback
          label.text-muted {{ 'page.register.TIP-REPASSWORD' | translate}}
          input.form-control(type='password', name="account_password_confirm", ng-model="reg.register.account_password_confirm", ui-validate="'$value==register.password'" ui-validate-watch="'password'")
          span.fa.fa-lock.form-control-feedback.text-muted
          span.text-danger(ng-show="reg.registerForm.account_password_confirm.$dirty && reg.registerForm.account_password_confirm.$error.validator") {{ "validator.PASSWORD-MATCH" | translate}}
        .clearfix
          .checkbox.c-checkbox.pull-left.mt0
            label
              input(type='checkbox', required='', name="account_agreed", ng-model="reg.account.agreed")
              span.fa.fa-check
              |  {{ 'page.register.TERM-AGREE-A' | translate}}
              a(href="#") {{ 'page.register.TERM-AGREE-B' | translate}}
        .text-danger(ng-show="reg.registerForm.account_agreed.$dirty && reg.registerForm.account_agreed.$error.required") {{ "validator.TERM-AGREE" | translate}}
        
        button.btn.btn-block.btn-primary.mt-lg(type='submit') {{ 'page.register.CREATE-ACCOUNT' | translate}}
      
      .alert.alert-danger.text-center(ng-show='reg.authMsg') {{reg.authMsg}}      
      
      p.pt-lg.text-center {{ 'page.register.EXIST-ACCOUNT' | translate}}?
      a(ui-sref="page.login").btn.btn-block.btn-default {{ 'page.login.LOGIN' | translate}}

  // END panel
  .p-lg.text-center
    span &copy; 
    span(ng-bind="app.year") 
    span  - 
    span(ng-bind="app.name")
    br
    span(ng-bind="app.description")
